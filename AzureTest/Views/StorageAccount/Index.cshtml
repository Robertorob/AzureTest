@model IEnumerable<AzureTest.Models.ContainerModel>

    <div class="text-center">
        <h1 class="display-4">Storage Account</h1>


        @foreach (var item in Model)
        {

            <h2>@item.ContainerName</h2>
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            File Name
                        </th>
                        <th>
                            Extension
                        </th>
                        <th>
                            Size
                        </th>
                        <th>
                            Last Modified
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var file in item.Files)
                    {
                        <tr>
                            <td>
                                @file.FileName
                            </td>
                            <td>
                                @file.Extension
                            </td>
                            <td>
                                @file.Size
                            </td>
                            <td>
                                @file.LastModified
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }

        
    </div>
